#include <stdio.h> #include <string.h> void main() { char operator[3]; // To handle single or double character operators printf("Enter an operator: "); scanf("%s", operator); // Check for single-character operators if (strlen(operator) == 1) { switch (operator[0]) { case '+': printf("Arithmetic Operator: Addition\n"); break; case '-': printf("Arithmetic Operator: Subtraction\n"); break; case '*': printf("Arithmetic Operator: Multiplication\n"); break; case '/': printf("Arithmetic Operator: Division\n"); break; case '%': printf("Arithmetic Operator: Modulus\n"); break; case '=': printf("Assignment Operator\n"); break; case '<': printf("Relational Operator: Less than\n"); break; case '>': printf("Relational Operator: Greater than\n"); break; case '&': printf("Logical Operator: AND\n"); break; case '|': printf("Logical Operator: OR\n"); break; case '!': printf("Logical Operator: NOT\n"); break; default: printf("Invalid Operator\n"); } } // Check for double-character operators else if (strlen(operator) == 2) { if (strcmp(operator, "==") == 0) { printf("Relational Operator: Equal to\n"); } else if (strcmp(operator, "!=") == 0) { printf("Relational Operator: Not equal to\n"); } else if (strcmp(operator, "<=") == 0) { printf("Relational Operator: Less than or equal to\n"); } else if (strcmp(operator, ">=") == 0) { printf("Relational Operator: Greater than or equal to\n"); } else if (strcmp(operator, "&&") == 0) { printf("Logical Operator: AND\n"); } else if (strcmp(operator, "||") == 0) { printf("Logical Operator: OR\n"); } else { printf("Invalid Operator\n"); } } else { printf("Invalid Operator\n"); } }